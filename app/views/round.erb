<div class="container">
  <h2>Welcome: <%= @user.name  %></h2>
</div>

<h1>Your Score by Rounds</h1>

  <div class="centerTable">
  <table class="hovertable">
    <!-- ¿Qué va en esta parte para mostrar la lista de ganadores? -->
    
      <tr>
      <th>Round</th>
      <th>submarinos Destruidos</th>
       <th>Result</th>
    </tr>
    <% users = User.find(@user.id) %>

     <% users.games.each do |us| %>
   
      
          <tr>
            <td><%= us.id %></td>
            <td><%= us.submarino %></td>
            <td><%= us.ganador   %></td>
          </tr>
       <% end %>

    
  </table>
</div>

<aside>
  <h3></h3>
  <form method="post" action="/new_game">
    <input type="submit" value="Play Again">
  </form>
</aside>